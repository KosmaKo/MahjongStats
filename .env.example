# MahjongStats Environment Variables
# Copy this file to .env and fill in your secrets
# DO NOT commit .env to source control!

# Google OAuth Configuration (for Railway/Production)
# Get these from: https://console.cloud.google.com
# Create OAuth 2.0 Web Application credentials
# Add redirect URI: https://your-railway-domain.up.railway.app/signin-google
Google__ClientId=YOUR_GOOGLE_CLIENT_ID_HERE
Google__ClientSecret=YOUR_GOOGLE_CLIENT_SECRET_HERE

# Email whitelist for Refresh page access (Cookies)
# Users must have one of these emails to access the sync functionality
Auth__AllowedEmails__0=email@gmail.com
# Add more emails as needed:
# Auth__AllowedEmails__1=another.email@gmail.com

# MahjongTracker API Configuration
MahjongTracker__ApiUrl=API_URL_IF_CUSTOM_HERE
MahjongTracker__BearerToken=YOUR_BEARER_TOKEN_HERE

# Environment
ASPNETCORE_ENVIRONMENT=Production
